# Steam API Configuration
# Get your key at: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here
VITE_STEAM_API_KEY=your_steam_api_key_here

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Admin (Service Role) - ONLY for server-side scripts, NEVER expose to client
# Get this from: Supabase Dashboard > Project Settings > API > service_role key (secret)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Google AdSense Configuration
# Get your publisher ID from: https://www.google.com/adsense/
# Format: ca-pub-XXXXXXXXXXXXXXXX
VITE_ADSENSE_CLIENT_ID=ca-pub-PLACEHOLDER

# Enable/disable AdSense (set to 'false' to disable all ads)
VITE_ADSENSE_ENABLED=true

# Ad Slot IDs - Create these in your AdSense dashboard
# Each ad placement needs its own slot ID
VITE_AD_SLOT_BOUNTY_LIST=PLACEHOLDER_SLOT_1
VITE_AD_SLOT_LEADERBOARD=PLACEHOLDER_SLOT_2
VITE_AD_SLOT_SIDEBAR=PLACEHOLDER_SLOT_3
